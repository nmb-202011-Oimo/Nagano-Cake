<h1>ショッピングカート</h1>

<p><%= link_to "カートを空にする", cart_items_destroy_all, method: :delete, "data-confirm" => "削除しますか？" %></p>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %> <%# <=現状@cart.itemsにはユーザの情報しか入れてないから、itemの情報が取れてるかはわかりません %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.price * 1.1 %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= cart_item.quantity * cart_item.item.price %></td>
      <td><%=link_to "削除する", cart_item_path(cart_items.id), class: "btn btn-danger", method: :delete,"data-confirm" => "削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>