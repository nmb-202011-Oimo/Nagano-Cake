<div class="container">
  <div class="row">
    <div>
      <h4>配送先登録/一覧</h4>

      <%= form_with model: @shipping, local:true do |f| %>
        <div class="field">
          <%= f.label "郵便番号(ハイフンなし)" %>
          <%= f.text_field :zipcode %>
        </div>
        <div class="field">
          <%= f.label "住所" %>
          <%= f.text_field :address %>
        </div>
        <div class="field">
          <%= f.label "宛名" %>
          <%= f.text_field :name %>
        </div>
        <div class="action">
          <%= f.submit "登録する", class: "btn btn-info col-xs-10 col-xs-offset-1" %>
        </div>
      <% end %>
    </div>
    <table>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @shippings.each do |shipping| %>
          <tr>
            <td><%= shipping.zipcode %></td>
            <td><%= shipping.address %></td>
            <td><%= shipping.name %></td>
            <td>
              <%= link_to "編集する", edit_shipping_path(shipping.id), class: "btn btn-info col-xs-10 col-xs-offset-1" %>
              <%= link_to "削除する", shipping_path(shipping), class: "btn btn-info col-xs-10 col-xs-offset-1", method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
