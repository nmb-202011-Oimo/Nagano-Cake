<div class="container">
  <div class="row">
    <div>
      <h4>配送先編集</h4>

      <%= form_with model: @shipping, local:true do |f| %>
        <div class="field">
          <%= f.label "郵便番号(ハイフンなし)" %>
          <%= f.text_field :zipcode %>
        </div>
        <div class="field">
          <%= f.label "住所" %>
          <%= f.text_field :address %>
        </div>
        <div class="field">
          <%= f.label "宛名" %>
          <%= f.text_field :name %>
        </div>
        <div class="action">
          <%= f.submit "更新する",  class: "btn btn-info col-xs-10 col-xs-offset-1", method: :patch %>
        </div>
      <% end %>
    </div>
  </div>
</div>
