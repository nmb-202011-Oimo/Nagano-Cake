<div class="container">
  <div class="row">
    <div class="shipping-edit col-lg-12">

      <h3>配送先編集</h3>

      <table class="table table-hover">

        <%= form_with model: @shipping, local:true do |f| %>
          <thead class="thead-light">
            <tr>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td>
                <%= f.label "郵便番号(ハイフンなし)" %>
              </td>
              <td class="field">
                <%= f.text_field :zipcode %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.label "住所" %>
              </td>
              <td class="field">
                <%= f.text_field :address, size: 40 %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.label "宛名" %>
              </td>
              <td class="field">
                <%= f.text_field :name %>
              </td>
            </tr>
          </tbody>

          <tfoot>
            <tr>
              <th></th>
              <th class="action">
                <%= f.submit "更新する",  class: "btn btn-info col-xs-10 col-xs-offset-1 px-5 btn-lg", method: :patch %>
              </th>
            </tr>
          </tfoot>
        <% end %>

      </table>
      
      <div>
        <%= link_to shippings_path do %>
          <p class="ship-edit-link">配送先一覧に戻る</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
