<div class="container">
  <div class="row">
    <div>
      <h4>配送先編集</h4>

      <%= form_with model: @shipping, local:true do |f| %>
        <div class="field">
          <%= label "郵便番号(ハイフンなし)" %>
          <%= f.text_field :zipcode %>
        </div>
        <div class="field">
          <%= label "住所" %>
          <%= f.text_field :address %>
        </div>
        <div class="field">
          <%= label "宛名" %>
          <%= f.name_field :name %>
        </div>
        <div class="field">
          <%= f.submit "編集する", edit_shipping_path, class: "btn btn-info col-xs-10 col-xs-offset-1" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
