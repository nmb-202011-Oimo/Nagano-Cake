
<table class="table category">
  <thead class="table-success">
    <tr>
      <th>
        <h5>ジャンル検索</h5>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to items_path do %>
          <p class="text-ct">全商品</p>
        <% end %>
      </td>
    </tr>
    <% categories.each do |category| %>
      <tr>
        <td>
          <%= link_to search_item_path(id: category.id) do %>
            <p class="text-ct"><%= category.name %></p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

