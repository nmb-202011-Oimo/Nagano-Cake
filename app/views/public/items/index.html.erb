
<%# カテゴリー検索画面の部分テンプレート%>
<%= render "public/items/category", {categories: @categories} %>

<%# カテゴリーに対応した、商品一覧の題名の作成%>
<h1>商品一覧</h1>
 <%# カテゴリー商品の取得件数 %>
 <p>全<%= @items.count %>件</p>
 
 <%# 商品をeach文で回す%>
 <% @items.each do |item| %>
 <%# 商品画像 %>
 <%= link_to item_path(item.id) do %>
 <%= attachment_image_tag item, :image_id, format: "jpg", size: "60x60" %>
 <%# 商品名 %>
 <%= item.name %>
 <% end %>
 <%# 商品価格 %>
 <%= item.price %>
 <% end %>
 
 