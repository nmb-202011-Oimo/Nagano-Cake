<div class='container'>
    <div class='row'>
        <h2>注文履歴一覧</h2>
            <table class='table'>
                <thead>
                    <tr class='table-name'>
                        <th>注文日</th>
                        <th>配送先</th>
                        <th>注文商品</th>
                        <th>支払金額</th>
                        <th>注文ステータス</th>
                        <th>注文詳細</th>
                    </tr>
                </thead>
                <tbody>
                    <% @orders.each do |order| %>
                    <tr>
                        <td><%= l order.created_at, format: :long %></td>
                        <td><%= order.zipcode %></br>
                            <%= order.address %></br>
                            <%= order.name %></td>
                        <td><% order.order_details.each do |order_detail| %>
                            <%= order_detail.item.name %>
                            <% end %></td>
                        <td><%= order.total_price %></td>
                        <td><%= order.status %></td>
                        <td>
                            <%= link_to order_path(order.id) do %>
                                <p class="order-date">詳細ページへ</p>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
    </div>
</div>
