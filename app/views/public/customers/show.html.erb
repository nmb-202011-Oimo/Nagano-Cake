<div class="container">
  <div class="mypage-background">
    <div class="row mypage">
      <div class="col-lg-12">


        <h4>マイページ</h4>
        <table class="table table-hover mytable" style="color:#696969;">
          <thead class="profile-line thead-light">
            <tr>
              <th>登録情報</th>
              <th></th>
            </tr>
          </thead>
          <tbody class="profile-list">
            <tr>
              <td class="profile-item">氏名</td>
              <td class="profile-item"><%= current_customer.family_name %> <%= current_customer.first_name %></td>
            </tr>
            <tr>
              <td class="profile-item">カナ</td>
              <td class="profile-item">
                <%= current_customer.kana_family_name %> <%= current_customer.kana_first_name %>
              </td>
            </tr>
            <tr>
              <td class="profile-item">郵便番号</td>
              <td class="profile-item"><%= current_customer.zipcode %></td>
            </tr>
            <tr>
              <td class="profile-item">住所</td>
              <td class="profile-item"><%= current_customer.address %></td>
            </tr>
            <tr>
              <td class="profile-item">電話番号</td>
              <td class="profile-item"><%= current_customer.phone_number %></td>
            </tr>
            <tr>
              <td class="profile-item">メールアドレス</td>
              <td class="profile-item"><%= current_customer.email %></td>
            </tr>
          </tbody>
          <tfoot>
            <tr>
              <td class="profile-item">
                  <%= link_to "登録情報を編集する", edit_customer_path(current_customer.id), class: "btn btn-secondary col-xs-10 col-xs-offset-1" %>
              </td>
              <td class="profile-item">
                  <%= link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-secondary col-xs-10 col-xs-offset-1" %>
              </td>
            </tr>
          </tfoot>
        </table>

        <div class="profile-link" style="padding-bottom:80px">
          <div class="card profile-card bg-light">
            <p>配送先</p>
            <p class="shipping-link"><%= link_to "配送先一覧へ", shippings_path, class: "btn btn-secondary col-xs-10 col-xs-offset-1" %></p>
          </div>
          <div class="card profile-card bg-light">
            <p>注文履歴</p>
            <p class="order-link"><%= link_to "注文履歴を見る", orders_path, class: "btn btn-secondary col-xs-10 col-xs-offset-1" %></p>
          </div>
        </div>


      </div>
    </div>
  </div>
</div>