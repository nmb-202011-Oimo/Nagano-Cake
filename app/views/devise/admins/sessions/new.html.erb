<%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
<div class='container'>
  <div class="row mt-5 ml-5">
    <h2>管理者ログイン</h2>
  </div>
  <div class="row">
    <div class="col-lg-6 mx-auto mt-5">
      <table class="table table-borderless">
        <tr>
          <td><%= f.label :"メールアドレス :" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :"パスワード :" %></td>
          <td><%= f.password_field :password, autofocus: true, id: "password__input", class: "form-control" %></td>
        </tr>
      </table>
    </div>
  </div>
    
  <div class="row">
    <div class="col-lg-12 col-sm-12 text-center mt-4">
      <%= f.submit "ログイン", class: "btn btn-secondary" %>
    </div>
  </div>
  <% end %>
</div>
