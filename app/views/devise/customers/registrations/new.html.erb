<div class="container">
   <div class="row">
     <div class="col-lg-7">
      <h3>新規会員登録</h3>

      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
        <%= render "devise/customers/shared/error_messages", resource: resource %>
                
                <div class="field"> 
                   <strong>名前</strong>
                    <%= f.label "(姓)" %>
                    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
                    <%= f.label "(名)" %>
                   <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                </div>
            
                 
                 
                 <div class="field">
                   <strong>フリガナ</strong>
                     <%= f.label "(セイ)" %>
                     <%= f.text_field :kana_family_name, autofocus: true, autocomplete: "kana_family_name" %>
                      <%= f.label "(メイ)" %>
                      <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
                 </div>
                    
                    
                    <div class="row">
                       <%= f.label "メールアドレス", class:"font-weight-bolder ml-3" %>
                    </div>
                        <div class="ml-5">
                         <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                        </div>
                 
                 
                  <div class="row">
                    <%= f.label "郵便番号(ハイフンなし)", class:"font-weight-bolder ml-3" %>
                  </div>
                  <div class="ml-5">
                   <%= f.text_field :zipcode, autofocus: true, autocomplete: "zipcode" %>
                  </div>
                 
                <div class="row">
                   <%= f.label "住所", class:"font-weight-bolder ml-3" %>
                 </div>
                 <div class="ml-5">
                 <%= f.text_field :address, class:"form-control", autofocus: true, autocomplete: "address" %>
                </div>
                 
                  <div class="row">
                    <%= f.label "電話番号", class:"font-weight-bolder ml-3" %>
                   </div>
                    <div class="ml-5">
                      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
                    </div>
                   
                       <div class="row">
                         <%= f.label "パスワード(6文字以上)", class:"font-weight-bolder ml-3" %>
                         <% if @minimum_password_length %>
                         <em>(<%= @minimum_password_length %> characters minimum)</em>
                         <% end %>
                      </div>
                        <div class="ml-5">
                          <%= f.password_field :password, autocomplete: "new-password" %>
                        </div>
                   
                    <div class="row">
                      <%= f.label "パスワード(確認用)", class:"font-weight-bolder ml-3" %>
                    </div>
                      <div class="ml-5">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                      </div>

        <div class="col-4 mx-auto">
          <%= f.submit "新規登録", class:"btn btn-secondary" %>
        </div>
      <% end %>

      <h4>既に登録済みの方</h4>
      <%= render "devise/customers/shared/links" %>
   </div>
  </div>
</div>