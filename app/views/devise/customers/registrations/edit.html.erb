<div class="container">
  <div class="row">
    <div class="edit-custpass col-lg-12">
      <h2 class="custpass-title">パスワード変更画面</h2>
      <table class="table table-hover">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/customers/shared/error_messages", resource: resource %>
        <thead class="thead-light">
          <tr>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= f.label "メールアドレス" %>
            </td>
            <td class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
            </td>
          </tr>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <tr>
            <td>
              <%= f.label "新しいパスワード" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
              <i>(パスワードを変更しない場合、空白のままにしてください))</i>
            </td>
            <td class="field">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label "新しいパスワード(確認用)" %>
            </td>
            <td class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label "現在のパスワード" %><br /> <i>(パスワードを変更する場合は、現在のパスワードが必要になります)</i>
            </td>
            <td class="field">
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </td>
          </tr>
        </tbody>
        <tfoot>
          <tr>
            <td></td>
            <td class="actions">
              <%= f.submit "更新する", class: 'btn btn-outline-success btn-lg' %>
            </td>
          </tr>
        </tfoot>
      <% end %>
      </table>
    </div>
  </div>
</div>