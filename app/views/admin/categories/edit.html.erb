<div class="container">
    <div class="row">
        <div class="col-md-8">
        <%= render "layouts/error_messages", model: @category %>
        <h2>カテゴリー編集</h2>
        <%= form_with model: @category, url: admin_category_path, local: true do |f| %>
        <%= f.label :"カテゴリー" %>
        <%= f.text_field :name, class: "form-control-sm" %>
        <%= f.radio_button :is_active, true %>有効
        <%= f.radio_button :is_active, false %>無効
        <%= f.submit "変更を保存する", class: "btn btn-outline-secondary" %>
        <% end %>
        </div>
    </div>
</div>