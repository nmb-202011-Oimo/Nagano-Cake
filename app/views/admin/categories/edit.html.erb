<div class="container">
    <div class="row">
        <h2>カテゴリー編集</h2>
        <%= form_with model:@category, url:admin_category_path, local:true do |f| %>
        <%= f.label :"カテゴリー" %>
        <%= f.text_field :name %>
        <%= f.radio_button :is_active, true %>有効
        <%= f.radio_button :is_active, false %>無効
        <%= f.submit "変更を保存する", class: "btn btn-info" %>
        <% end %>
    </div>
</div>