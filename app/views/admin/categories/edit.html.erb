<%= form_with model: @category, url: admin_category_path, local: true do |f| %>
<div class="container">
    <div class="row mt-5 ml-5">
        <!--エラーメッセージ呼び出し-->
        <%= render "layouts/error_messages", model: @category %>
        <h2 class="heading">カテゴリー編集</h2>
    </div>
    <div class="row">
        <div class="col-lg-6 mx-auto mt-5">
            <table class="table table-borderless">
                <tr>
                    <td><%= f.label :"カテゴリー" %></td>
                    <td> <%= f.text_field :name, class: "form-control" %></td>
                </tr>
                <tr>
                    <td><%= f.label :"状態" %></td>
                    <td><%= f.radio_button :is_active, true %>有効
                        <%= f.radio_button :is_active, false %>無効
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 text-center mt-4">
            <%= f.submit "変更を保存する", class: "btn btn-secondary" %>
        </div>
    </div>
</div>
<% end %>