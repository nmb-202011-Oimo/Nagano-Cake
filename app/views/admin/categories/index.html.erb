<div class='container'>
    <div class='row'>
        <h2>カテゴリー一覧・追加</h2>
        <%= render "form_category", category:@category %>
        
        <table class="table">
            <thead>
                <tr class="table-name">
                    <th>カテゴリー</th>
                    <th>状態</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @categories.each do |category| %>
                <tr>
                    <td><%= category.name %></td>
                    <% if category.is_active == true %>
                        <td>有効</td>
                    <% elsif category.is_active == false %>
                        <td>無効</td>
                    <% end %>
                    <td><p><%= link_to "編集する", edit_admin_category_path(category.id), class: "btn btn-info" %></p></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>