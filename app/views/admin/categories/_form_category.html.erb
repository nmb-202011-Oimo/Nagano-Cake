<%= form_with model: category, url:admin_categories_path, local:true do |f| %>
<%= f.label :"カテゴリー" %>
<%= f.text_field :name, class: "form-control-sm" %>
<%= f.radio_button :is_active, true %>有効
<%= f.radio_button :is_active, false %>無効
<%= f.submit "追加", class: "btn btn-outline-secondary" %>
<% end %>