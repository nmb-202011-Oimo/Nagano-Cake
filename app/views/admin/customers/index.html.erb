<div class='container'>
    <div class='row'>
        <h2>会員一覧</h2>
          <table class="table">
            <thead>
                <tr class="table-name">
                    <th>会員ID</th>
                    <th>氏名</th>
                    <th>メールアドレス</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @customers.each do |customer| %>
                <tr>
                    <td><%= customer.id %></td>
                    <td><%= customer.family_name %></td>
                    <td><%= customer.email %></td>
                    <% if customer.is_deleted == false %>
                        <td>退会済み</td>
                    <% elsif customer.is_deleted == true %>
                        <td>有効</td>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>