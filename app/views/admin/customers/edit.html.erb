<div class='container'>
    <div class='row'>
        <%= render "layouts/error_messages", model: @customer %>
        <h2><%= @customer.family_name %>     <%= @customer.first_name %>さんの会員情報編集</h2>
        <%= form_with model: @customer, url: admin_customer_path, method: :put, local: true do |f| %>
       
        
        <div class="form-group">
            <%= f.label :"顧客ID" %>
            <%= f.text_field :id %>
        </div>
        
        <div class="form-group">
            <%= f.label :"氏名" %>
            <%= f.text_field :family_name %>
            <%= f.text_field :first_name %>
        </div>
        <div class="form-group">
            <%= f.label :"フリガナ" %>
          <%= f.text_field :kana_family_name %>
            <%= f.text_field :kana_first_name %>
        </div>
        <div class="form-group">
            <%= f.label :"郵便番号" %>
             <%= f.text_field :zipcode %>
        </div>
        <div class="form-group">
            <%= f.label :"住所" %>
            <%= f.text_area :address %>
        </div>
        <div class="form-group">
            <%= f.label :"電話番号" %>
         <%= f.text_field :phone_number %>
        </div>
         <div class="form-group">
            <%= f.label :"メールアドレス" %>
         <%= f.text_field :email %>
        </div>
        <div class="form-group">
        <%= f.radio_button :is_deleted, false %>有効
        <%= f.radio_button :is_deleted, true %>退会済み
        </div>
        
        <%= f.submit "変更を保存する" %>
        <% end %>
        
    </div>
    </div>
</div>