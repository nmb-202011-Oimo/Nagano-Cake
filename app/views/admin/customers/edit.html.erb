<%= form_with model: @customer, url: admin_customer_path, method: :put, local: true do |f| %>
<div class='container'>
    <div class="row mt-5 ml-5">
        <!--エラーメッセージの呼び出し-->
        <%= render "layouts/error_messages", model: @customer %>
        <h2 class="heading"><%= @customer.family_name %>     <%= @customer.first_name %>さんの会員情報編集</h2>
    </div>
    <div class='row'>
        <div class="col-lg-7 mx-auto mt-3">
            <table class="table table-borderless">
                <tr>
                    <td><%= f.label :"顧客ID" %></td>
                    <td><%= @customer.id %></td>
                </tr>
                <tr>
                    <td><%= f.label :"氏名" %></td>
                    <td><%= f.text_field :family_name, class: "form-control"  %></td>
                    <td><%= f.text_field :first_name, class: "form-control"  %></td>
                </tr>
                <tr>
                    <td><%= f.label :"フリガナ" %></td>
                    <td><%= f.text_field :kana_family_name, class: "form-control"  %></td>
                    <td><%= f.text_field :kana_first_name , class: "form-control" %></td>
                </tr>
                <tr>
                    <td><%= f.label :"郵便番号" %></td>
                    <td><%= f.text_field :zipcode , class: "form-control" %></td>
                </tr>
                <tr>
                    <td><%= f.label :"住所" %></td>
                    <td><%= f.text_area :address, class: "form-control"  %></td>
                </tr>
                <tr>
                    <td><%= f.label :"電話番号" %></td>
                    <td><%= f.text_field :phone_number, class: "form-control"  %></td>
                </tr>
                <tr>
                    <td><%= f.label :"メールアドレス" %></td>
                    <td><%= f.text_field :email, class: "form-control"  %></td>
                </tr>
                <tr>
                    <td></td>
                    <td><%= f.radio_button :is_deleted, false %>有効
                        <%= f.radio_button :is_deleted, true %>退会済み</td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 text-center mt-4">
            <%= f.submit "変更を保存する", class: "btn btn-secondary" %>
        </div>
    </div>
</div>
<% end %>