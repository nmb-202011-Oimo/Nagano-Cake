<div class='container'>
    <div class='row'>
        <h2>注文履歴一覧</h2>
            <table class='table'>
                <thead>
                    <tr class='table-name'>
                        <th>購入日時</th>
                        <th>購入者</th>
                        <th>注文個数</th>
                        <th>注文ステータス</th>
                    </tr>
                </thead>
                <tbody>
                     <% @orders.each do |order| %>
                    <tr>
                        <%= link_to admin_order_path(order) do %>
                        <td><%= order.created_at %></td>
                        <% end %>
                        <td><%= order.customer.family_name %></td>
                        <td><%= order.order_details.quantity %></td>
                        <td><%= order.status %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
    </div>
</div>