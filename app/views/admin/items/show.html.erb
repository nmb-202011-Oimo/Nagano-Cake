<div class="container">
    <div class="row mt-5 ml-5">
        <h2>商品詳細</h2>   
    </div>
    <div class="row">
        <div class="col-lg-3">
            <p><%= attachment_image_tag @item, :image, size: "300x300", format: 'jpeg', fallback: "no_image.jpg", class: "rounded mt-5" %></p>
        </div>
 
        <div class="col-lg-8 mt-5 ml-5">
            <table class="table table-borderless">
                <tr>
                    <td>商品名</td>
                    <td><%= @item.name %></td>
                </tr>
                <tr>
                    <td>商品説明</td>
                    <td><%= @item.introduction %></td>
                </tr>
                <tr>
                    <td>カテゴリー</td>
                    <td><%= @item.category.name %></td>
                </tr>
                <tr>
                    <td>税込価格（税抜価格）</td>
                    <td><%= number_to_currency(1.1*@item.price, strip_insignificant_zeros: true) %> (<%= @item.price %>)円</td>
                </tr>
                <tr>
                    <td>販売ステータス</td>
                    <td><% if @item.is_active == true %>
                        <p>販売中<p>
                        <% elsif @item.is_active == false %>
                        <p>売切れ</p>
                        <% end %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 text-center mt-4">
        <%= link_to "編集", edit_admin_item_path(@item.id),  class: "btn btn-secondary" %> 
        </div>
    </div>
</div>