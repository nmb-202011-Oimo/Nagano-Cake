 <div class='container'>
   <div class='row'>
     
 
 <h2>商品一覧</h2>
 
 <table class="table">
        <thead>
          <tr class='table-name'>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                  <% end %></td>
              <td><%= item.price %></td>
              <td><%= item.category.name %></td>
              <% if item.is_active == true %>
                <td>販売中</td>
                <% elsif item.is_active == false %>
                <td>売切れ</td>
                <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= link_to "新商品追加はこちら", new_admin_item_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
  