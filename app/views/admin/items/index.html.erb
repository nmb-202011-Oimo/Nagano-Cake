 <h2>商品一覧</h2>
 
 <table class="table">
        <thead>
          <tr>
            <th class='table-name'>商品ID</th>
            <th class='table-name'>商品名</th>
            <th class='table-name'>税抜価格</th>
            <th class='table-name'>ジャンル</th>
            <th class='table-name'>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, "/items/#{item.id}" %></td>
              <td><%= item.price %></td>
              <td><%= item.category %></td>
              <td><%= item.is_active %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= link_to "新商品追加はこちら", new_admin_item_path %>