<div class='container'>
    
    <%= render "layouts/error_messages", model: @item %>
    <h2>商品編集</h2>
    <div class='row'>
        <div class="col-md-3">
            <%= form_with model: @item, url: admin_item_path, method: :put, local: true do |f| %>
            <div class="custom-file">
        


            <%= f.attachment_field :image, size: "100x100" %>
            </div>
        </div>
        <div class="col-md-8 offset-md-1 mx-auto">
            <div class="form-group">
                <%= f.label :"商品名" %>
                <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :"商品説明" %>
                <%= f.text_field :introduction, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :"カテゴリー" %>
                <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: "-- 選択してください--") %>
            </div>
            
            
            <div class="form-group">
                <%= f.label :"税抜価格" %>
                <%= f.text_field :price, class: "form-control" %>円
            </div>
            <div class="form-group">
                <%= f.label :"販売ステータス" %>
                <%= f.select :is_active, [['販売中', true], ['売切れ', false]], prompt: "-- 選択してください --"  %>
            </div>
            <%= f.submit "更新", class: "btn btn-outline-secondary" %>
            <% end %>
        </div>
    </div>
</div>