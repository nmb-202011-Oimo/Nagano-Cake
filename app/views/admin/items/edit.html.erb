<%= form_with model: @item, url: admin_item_path, method: :put, local: true do |f| %>
<div class='container'>
    <div class="row mt-5 ml-5">
        <h2>商品編集</h2>
    </div>
    <div class="row">
        <div class="col-lg-3 mt-5">
            <%= f.attachment_field :image, size: "300x300" %>
        </div>
    
        <div class="col-lg-8 mx-auto mt-3">
            <!--エラーメッセージ呼び出し-->
        <%= render "layouts/error_messages", model: @item %>
        <table class="table table-borderless">
            <tr>
                <td><%= f.label :"商品名" %></td>
                <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
                <td><%= f.label :"商品説明" %></td>
                <td><%= f.text_field :introduction, class: "form-control" %></td>
            </tr>
            <tr>
                <td><%= f.label :"カテゴリー" %></td>
                <td><%= f.collection_select(:category_id, Category.all, :id, :name, prompt: "-- 選択してください--") %></td>
            </tr>
            <tr>
                <td><%= f.label :"税抜価格" %></td>
                <td><%= f.text_field :price, class: "form-control-md" %>円</td>
            </tr>
            <tr>
                <td><%= f.label :"販売ステータス" %></td>
                <td><%= f.select :is_active, [['販売中', true], ['売切れ', false]], prompt: "-- 選択してください --"  %></td>
            </tr>
        </table>
        </div>
    </div>
    <div class='row'>
        <div class="col-lg-12 col-sm-12 text-center mt-4">
            <%= f.submit "更新", class: "btn btn-secondary" %>    
        </div>
    </div>
</div>
<% end %> 