<div class='container'>
    <div class='row'>
        <h2>商品編集</h2>
        <%= form_with model: @item, url: admin_item_path, method: :put, local: true do |f| %>
        <%= f.attachment_field :image %>
   
        <div class="form-group">
            <%= f.label :"商品名" %>
            <%= f.text_field :name %>
        </div>
        <div class="form-group">
            <%= f.label :"商品説明" %>
            <%= f.text_field :introduction %>
        </div>
        <div class="form-group">
            <%= f.label :"カテゴリー" %>
            <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: "-- 選択してください --" )%>
        </div>
        <div class="form-group">
            <%= f.label :"税抜価格" %>
            <%= f.text_field :price %>円
        </div>
        <div class="form-group">
            <%= f.label :"販売ステータス" %>
            <%= f.select :is_active, [['販売中', true], ['売切れ', false]], prompt: "-- 選択してください --"  %>
        </div>
        <%= f.submit "更新" %>
        <% end %>
        
    </div>
</div>