
<%= form_with model: item, url: admin_items_path, local: true do |f| %>
<div class="row">
    <div class="col-md-3">
    
    <%= f.attachment_field :image %>
    </div>
    <div class="col-md-8 offset-md-1">
        <div class="form-group">
        <%= f.label :"商品名" %>
        <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
        <%= f.label :"商品説明" %>
        <%= f.text_field :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
        <%= f.label :"カテゴリー" %>
        <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: "-- 選択してください --" )%>
   
        </div>
        <div class="form-group">
        <%= f.label :"税抜価格" %>
        <%= f.text_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
        <%= f.label :"販売ステータス" %>
        <%= f.select :is_active, [['販売中', true], ['売切れ', false]], prompt: "-- 選択してください --"  %>
        </div>
        <%= f.submit "新規登録", class: "btn btn-outline-secondary" %>
        <% end %>
    </div>
</div>