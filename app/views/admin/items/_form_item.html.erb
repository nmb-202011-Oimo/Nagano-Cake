<div class="form-group">
    <%= f.label :"商品名" %>
    <%= f.text_field :name %>
</div>
<div class="form-group">
    <%= f.label :"商品説明" %>
    <%= f.text_field :introduction %>
</div>
<div class="form-group">
    <%= f.label :"カテゴリー" %>
    <%= f.text_field :category %>
</div>
<div class="form-group">
    <%= f.label :"税抜価格" %>
    <%= f.text_field :price %>
</div>
<div class="form-group">
    <%= f.label :"販売ステータス" %>
    <%= f.select :is_active, [['販売中', true], ['売切れ', false]], prompt: "-- 選択してください --"  %>
</div>